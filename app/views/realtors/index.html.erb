<p id="notice"><%= notice %></p>
<hr>
<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @realtors.each do |realtor| %>
      <tr>
        <td><%= realtor.house %></td>
        <td><%= realtor.price %>円</td>
        <td><%= realtor.address %></td>
        <td><%= realtor.age %>年</td>
        <td><%= realtor.remarkes %></td>

        <td><%= link_to '詳細', realtor %></td>
        <td><%= link_to '編集', edit_realtor_path(realtor) %></td>
        <td><%= link_to '削除', realtor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '物件を登録する', new_realtor_path %>
